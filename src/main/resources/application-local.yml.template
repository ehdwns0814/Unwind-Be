# ===========================================
# Local Development Configuration Template
# ===========================================
# Copy this file to 'application-local.yml' and fill in your details.
# This file is ignored by Git.

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/unwind?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: your_db_username
    password: your_db_password

  data:
    redis:
      host: localhost
      port: 6379
      password: your_redis_password_if_any

jwt:
  secret: your-local-development-secret-key-at-least-32-chars-long

ai:
  api:
    key: your_ai_api_key_here
    base-url: https://api.openai.com/v1
